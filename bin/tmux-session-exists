#!/usr/bin/env bash

#
# prints true or false

set +e

_get_grep_status() {
  tmux list-sessions | sed -E 's/:.*$//' | grep -q "$pattern"
  local status="$?"
  echo $status
}

_echo_result() {
  if [ "$result" = "0" ]; then
    echo true
  else
    echo false
  fi
}

main() {
  local name=$1
  local pattern="^$name$"
  local result=$(_get_grep_status)
  _echo_result
  exit 0
}

main "$@"
